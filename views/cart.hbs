<h1>Card</h1>
<div id="card">
    {{#if scripts.length}}
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Count</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each scripts}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{_id}}" data-csrf="{{@root.csrf}}">Remove</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p><strong>Price: </strong> <span class="price">{{price}}</span></p>

    <form action="/orders" method="post">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button type="submit" class="btn">Make Order</button>
    </form>
    {{else}}
    <p>Card is empty</p>
    {{/if}}
</div>