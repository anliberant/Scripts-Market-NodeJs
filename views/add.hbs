<h1>Add Scripts</h1>
{{#if error}}
<p class="alert">{{error}}</p>
{{/if}}
<form action="/add" method="post">
    <div class="input-field">
        <input placeholder="Script Name" name="title" id="title" type="text" class="validate" required
            value="{{data.title}}">
        <label for="title">Script Name</label>
        <span class="helper-text" data-error="wrong script name"></span>
    </div>
    <div class="input-field">
        <input placeholder="Price of scipt" name="price" id="price" type="number" class="validate" required min="1"
            value="{{data.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="wrong price"></span>
    </div>
    <div class="input-field">
        <input placeholder="URL of picture" name="img" id="img" type="text" class="validate" required>
        value="{{data.img}}"
        <label for="image">URL of picture</label>
        <span class="helper-text" data-error="wrong URL picture"></span>
    </div>
    <div class="input-field">
        <input placeholder="Script Description" name="description" id="description" type="text" class="validate"
            required value="{{data.description}}">
        <label for="description">Script Description</label>
        <span class="helper-text" data-error="wrong script description"></span>
    </div>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn btn-primary">Add Script</button>
</form>